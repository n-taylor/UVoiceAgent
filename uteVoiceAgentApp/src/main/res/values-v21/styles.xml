<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="My_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_slategrey</item>
        <item name="android:statusBarColor">?attr/actionModeSplitBackground</item>
        <item name="android:navigationBarColor">@color/color_slategrey</item>
        <item name="colorAccent">@color/color_slategrey</item>
    </style>

    <!-- Style to replace actionbar overflow icon. set item 'android:actionOverflowButtonStyle' in AppTheme -->

    <style name="MyActionBar_theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorPrimary">@color/color_slategrey</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    
</resources>